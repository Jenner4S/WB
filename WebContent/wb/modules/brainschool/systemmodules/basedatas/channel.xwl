{"hidden":false,"children":[{"configs":{"itemId":"module"},"expanded":true,"children":[{"configs":{"layout":"absolute","itemId":"editWin","editWin":"true","width":"416","defaultFocus":"DEPT_NAME","height":"112"},"expanded":true,"children":[{"configs":{"allowBlank":"false","itemId":"CHANNEL_NAME","labelAlign":"right","fieldLabel":"* 渠道名称","width":"376","x":"0","y":"16","height":"22"},"expanded":false,"children":[],"type":"text"}],"type":"window","events":{"ok":"var values = Wb.getValue(app.editWin);\nif (app.isEdit) {\n  Wb.request({\n    url: 'm?xwl=brainschool/systemmodules/basedatas/channel/update',\n    params: Wb.applyIf(values, Wb.getData(app.selNode, true)),\n    success: function() {\n      values.text = values.CHANNEL_NAME;\n      Wb.update(app.selNode, values);\n      app.editWin.close();\n    }\n  });\n} else {\n  Wb.request({\n    url: 'm?xwl=brainschool/systemmodules/basedatas/channel/insert',\n    out: app.editWin,\n    params: {\n      PARENT_CHANNEL: app.selNode.data.CHANNEL_ID,\n      ORDER_INDEX: app.selNode.lastChild ? app.selNode.lastChild.data.ORDER_INDEX + 1 : 1\n    },\n    success: function(resp) {\n      app.selNode.expand();\n      app.selNode.appendChild(Wb.apply({\n        iconCls: 'db_field_icon',\n        text: values.CHANNEL_NAME,\n        children: []\n      }, Wb.decode(resp.responseText))).commit();\n      app.editWin.close();\n    }\n  });\n}"}},{"configs":{"layout":"border","itemId":"viewport1"},"expanded":true,"children":[{"configs":{"itemId":"toolbar1","region":"north"},"expanded":true,"children":[{"configs":{"itemId":"newBtn","tooltip":"在当前节点下添加渠道 (Ctrl+E)","text":"添加","iconCls":"record_add_icon"},"expanded":false,"children":[],"type":"item","events":{"click":"if (!app.selNode) {\n  Wb.warn('请选择 1 个渠道。');\n  return;\n}\napp.editWin.setTitle('添加 - ' + app.selNode.data.text);\napp.editWin.setIconCls('record_add_icon');\napp.editWin.show();\napp.isEdit = false;"}},{"configs":{"itemId":"editBtn","tooltip":"修改选择的渠道","text":"修改","icon